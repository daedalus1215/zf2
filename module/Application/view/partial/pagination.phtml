        <?php if (isset($next)) : ?>
            <li>
                <a href="<?php echo $this->url($route, array('page' => $next));?>" arial-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        <?php else: ?>
            <li>
                <a href="#" aria-label="Next">
