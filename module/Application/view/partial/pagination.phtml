<?php if ($pageCount): ?>
<nav>
    <ul class="pagination">
        <!-- previous page links -->
        <?php if (isset($previous)): ?>
            <li>
                <a href="<?php echo $this->url($route, array('page' => $previous)); ?>" aria-label="Previous">
                  &lt; Previous
                </a>
            </li>
        <?php else: ?>
            <li class="disabled">
                <a href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        <?php endif; ?>
