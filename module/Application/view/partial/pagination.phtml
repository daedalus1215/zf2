        <?php foreach($pagesInRange as $page) : ?>
            <?php if ($page != $current) : ?>
                <li>
                    <a href="<?php echo $this->url($route, array('page' => $page)); ?>">
                      <?php echo $page; ?>
                    </a>
                </li>
            <?php else: ?>
                <li class="disabled">
                  <a href="#">
                    <?php echo $page; ?>
                  </a>
                </li>
            <?php endif;?>
        <?php endforeach;?>

